
@*@{
    ViewBag.Title = "Index";
}*@




<div class="container">

    <form method="post" class="form-signin container " role="form">
        <h2 class="form-signin-heading ">Please sign in</h2>
        <div>
            <label for="useremail" class="sr-only ">Email address</label>
            <input type="email" name="useremail" id="useremail" value="@ViewBag.useremail" class="form-control " placeholder="Email address" required autofocus>
        </div>
        <div>
            <label for="userpassword" class="sr-only ">Password</label>
            <input type="password" name="userpassword" id="userpassword" value="@ViewBag.userpassword" class="form-control " placeholder="Password" >
        </div>
        <div class="checkbox">
            <label>
                <input type="checkbox" name="rbm" value="remember-me"> Remember me
            </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block " type="submit" id="btnSign" >Sign in</button>
    </form>

    


</div>